{
  "name": "music-memories-frontend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "setup": "npm i && dfx canister create music-memories-backend && dfx generate music-memories-backend && dfx deploy",
    "start": "vite --port 3000",
    "prebuild": "dfx generate",
    "build": "sh -c 'if [ -n \"$SKIP_WORKSPACE_BUILD\" ]; then echo Skipping frontend build; else tsc && vite build; fi'",
    "postbuild": "cp ../../.ic-assets.json5 ./dist/.ic-assets.json5 || true",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier . --write"
  },
  "dependencies": {
    "@dfinity/agent": "^3.2.0",
    "@dfinity/candid": "^3.2.0",
    "@dfinity/principal": "^3.2.0",
    "@tailwindcss/vite": "^4.1.11",
    "leaflet": "^1.9.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.30.1"
  },
  "devDependencies": {
    "@types/node": "^24.2.1",
    "@types/react": "^18.2.14",
    "@types/react-dom": "^18.2.6",
    "@vitejs/plugin-react": "^4.0.1",
    "autoprefixer": "^10.4.21",
    "dotenv": "^16.3.1",
    "postcss": "^8.5.6",
    "sass": "^1.63.6",
    "tailwindcss": "^4.1.11",
    "typescript": "^5.1.3",
    "vite": "^5.0.0",
    "vite-plugin-environment": "^1.1.3"
  }
}
