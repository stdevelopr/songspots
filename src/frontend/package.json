{
  "name": "vybers-frontend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "setup": "npm i && dfx canister create vybers-backend && dfx generate vybers-backend && dfx deploy",
    "start": "concurrently -n tcm,vite -c yellow,cyan \"npm:gen:css-types:watch\" \"vite --port 3000\"",
    "prebuild": "dfx generate",
    "build": "sh -c 'if [ -n \"$SKIP_WORKSPACE_BUILD\" ]; then echo Skipping frontend build; else tsc && vite build; fi'",
    "postbuild": "cp ./src/.ic-assets.json5 ./dist/.ic-assets.json5 && cp -r ./src/.well-known ./dist/.well-known || true",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier . --write",
    "gen:css-types": "tcm -p 'src/**/*.module.css' --camelCase",
    "gen:css-types:watch": "tcm -p 'src/**/*.module.css' --camelCase --watch"
  },
  "dependencies": {
    "@dfinity/agent": "^3.2.4",
    "@dfinity/candid": "^3.2.4",
    "@dfinity/principal": "^3.2.4",
    "@tailwindcss/vite": "^4.1.11",
    "leaflet": "^1.9.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.30.1"
  },
  "devDependencies": {
    "@types/node": "^24.2.1",
    "@types/react": "^18.2.14",
    "@types/react-dom": "^18.2.6",
    "@vitejs/plugin-react": "^4.0.1",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.1.2",
    "dotenv": "^16.3.1",
    "postcss": "^8.5.6",
    "sass": "^1.63.6",
    "tailwindcss": "^4.1.11",
    "typed-css-modules": "^0.7.2",
    "typescript": "^5.1.3",
    "vite": "^5.0.0",
    "vite-plugin-environment": "^1.1.3"
  }
}
